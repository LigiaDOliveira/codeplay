<% @courses.each do |course| %>
    <h1><%= link_to course.name, course %></h1>
    <p><%= course.description %></p>
    <p><%= course.code %></p>
    <p><%= course.docent.name %></p>
    <p><%= number_to_currency course.price,unit:'R$ ',separator:',',delimiter:'.'%></p>
    <p><%= course.enrollment_deadline.strftime('%d/%m/%Y') %></p>
<% end %>
